
<div class="page-data" style="display: none;" data-page-info='{"title": "Арена"}'></div>

<% if (isValidOptions) { %>

<div class="resize-target">

<button class="to-battle-button">
    В бой!
</button>
<div style="display: none;" class="wrong-size-error">
    Размер поля неверен.
</div>
<div style="display: none;" class="wrong-warrior-list-error">
    Ошибка загрузки роботов.
</div>
<div style="display: none;" class="winner-block">
    <span class="winner-block__name"></span><span> победил!</span>
</div>
<div class="wargrid-container">
</div>
<div class="speed-buttons">
    <button class="simple-speed-button speed-button selected">1x</button>
    <button class="double-speed-button speed-button">2x</button>
    <button class="quadruple-speed-button speed-button">4x</button>
    <button class="full-speed-button speed-button">Полная скорость</button>
</div>
<div class="iteration-number">
    <span class="iteration-number-hint">Шаг № </span>
    <span class="iteration-number-value"></span>
</div>
<ul class="warrior-list">
    <li style="display: none;" class="warrior-item">
        <div class="cell-count-block">
            <div class="cell-count">
                1
            </div>
            <div class="square-simbol">
                &#9632;
            </div>
        </div> —
        <div class="warrior-name"></div>
        <span class="warrior-create-date-before">от </span>
        <div class="warrior-create-date">
        </div>
        <span class="user-name-before">(Владелец: </span><div class="user-name"></div><span class="user-name-before">)</span>
        <div class="warrior-status">
            <div style="display: none;" class="warrior-status__disqualified">
                Дисквалифицирован
            </div>
            <div style="display: none;" class="warrior-status__lose">
                Проиграл
            </div>
            <div style="display: none;" class="warrior-status__win">
                Победил
            </div>
        </div>
    </li>
</ul>
<div class="fb-comments"
     data-width="100%"
     data-href="<%= currentUrl -%>"
     data-numposts="10"></div>

</div>

    <script src="/lib/validators.js" type="text/javascript"></script>
    <script src="/js/Class.js" type="text/javascript"></script>
    <script src="/js/EventEmitter.js" type="text/javascript"></script>
    <script type="text/javascript">
        __global.battleOptions = {
            size     : '<%= fieldSize -%>',
            warriors : <%- warriors -%>
        };
    </script>
    <script id="warriorRegistrator" src="/js/warriorRegistrator.js" type="text/javascript"></script>
    <script src="/js/GridWarPlayer/MGridWarPlayer.js" type="text/javascript"></script>
    <script src="/js/GridWarPlayer/VGridWarPlayer.js" type="text/javascript"></script>
    <script src="/js/GridWarPlayer/CGridWarPlayer.js" type="text/javascript"></script>
    <script src="/js/warGrid.js" type="text/javascript"></script>
<% } else { %>
    <h1>Настройки не валидны</h1>
<% } %>